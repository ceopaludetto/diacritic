{
	"name": "diacritic",
	"type": "module",
	"private": true,
	"workspaces": [
		"./packages/*"
	],
	"packageManager": "bun@1.1.8",
	"author": {
		"name": "Carlos Eduardo de Oliveira Paludetto",
		"email": "ceo.paludetto@gmail.com",
		"url": "https://www.github.com/ceopaludetto"
	},
	"license": "MIT",
	"engines": {
		"bun": ">=1.0.0"
	},
	"scripts": {
		"build": "turbo build --cache-dir=.turbo",
		"lint": "turbo lint --cache-dir=.turbo && manypkg check",
		"lint:fix": "turbo lint --cache-dir=.turbo -- --fix && manypkg fix",
		"test": "turbo test --cache-dir=.turbo",
		"test:update": "turbo test --cache-dir=.turbo -- --update-snapshots",
		"docs:dev": "vitepress dev documentation",
		"docs:build": "vitepress build documentation",
		"docs:preview": "vitepress preview documentation"
	},
	"dependencies": {
		"@antfu/eslint-config": "^2.18.1",
		"@manypkg/cli": "^0.21.4",
		"@total-typescript/tsconfig": "^1.0.4",
		"@types/bun": "^1.1.2",
		"eslint": "^9.3.0",
		"tsup": "^8.0.2",
		"turbo": "^1.13.3",
		"typescript": "^5.4.5",
		"vitepress": "^1.2.0"
	}
}
